@using System.Data;
@model List<Task_Management.Models.UserModel>;

@{
    ViewData["Title"] = "User List";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

@if (TempData["ErrorMassage"] != null)
{
    <script>
        Swal.fire({
            icon: "error",
            title: "Error",
            text: "@TempData["ErrorMassage"]",
        });
    </script>
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management - User List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5 p-4 rounded bg-white shadow">
        <h1 class="text-center mb-4">User List</h1>

        <div class="d-flex justify-content-end mb-3">
            <a asp-controller="User" asp-action="UserAddEdit" class="btn btn-primary me-2">
                <i class="bi bi-plus"></i> Add User
            </a>
        </div>

        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>User Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Mobile No</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>
                                    @{
                                        var password = user.Password.ToString();
                                        var maskedPassword = password.Length <= 3 ? password : password.Substring(0, 3) + new string('*', password.Length - 3);
                                    }
                                    @maskedPassword
                                </td>
                                <td>@user.MobileNo</td>
                                <td>
                                    @(user.Role ? "Admin" : "User")
                                </td>
                                <td>
                                    <a asp-controller="User" asp-action="UserAddEdit" asp-route-UserID="@user.UserID" class="btn btn-warning btn-sm me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form method="post" asp-controller="User" asp-action="UserDelete" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <input type="hidden" name="UserID" value="@user.UserID" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning mt-4" role="alert">
                No users found.
            </div>
        }
    </div>
</body>
</html>
